# Configuración de Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopcart_db
DB_USER=shopcart_user
DB_PASSWORD=shopcart_password

# Configuración de Microservicios - Puertos
GATEWAY_PORT=5000
USER_SERVICE_PORT=5001
PRODUCT_SERVICE_PORT=5002
CART_SERVICE_PORT=5003
PAYMENT_SERVICE_PORT=5004
CATEGORY_SERVICE_PORT=5005

# URLs de Microservicios (para el API Gateway)
USER_SERVICE_URL=http://localhost:5001
PRODUCT_SERVICE_URL=http://localhost:5002
CART_SERVICE_URL=http://localhost:5003
PAYMENT_SERVICE_URL=http://localhost:5004
CATEGORY_SERVICE_URL=http://localhost:5005

# Configuración de entorno
NODE_ENV=development

# Configuración de JWT (para futuras implementaciones)
JWT_SECRET=shopcart_jwt_secret_key_2025
JWT_EXPIRES_IN=24h

# Configuración de sesiones
SESSION_SECRET=shopcart_session_secret_2025

# Configuración OAuth 2.0 - Google
# IMPORTANTE: Reemplazar con tus credenciales reales de Google Cloud Console
GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui
GOOGLE_REDIRECT_URL=http://localhost:5001/api/users/auth/google/callback

# Configuración de CORS
FRONTEND_URL=http://localhost:3000

# Configuración de RabbitMQ (para comunicación asíncrona)
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
